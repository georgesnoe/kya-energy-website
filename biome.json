{
	"$schema": "https://biomejs.dev/schemas/2.2.2/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "space",
    "indentWidth": 2
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "complexity": "on",
      "style": "on",
      "a11y": "error"
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double",
      "arrowParentheses": "always",
      "attributePosition":"multiline",
      "bracketSameLine":true,
      "bracketSpacing": true,
      "expand": "always",
      "indentStyle": "space",
      "indentWidth": 2,
      "jsxQuoteStyle": "double",
      "semicolons": "always",
      "trailingCommas": "all"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
